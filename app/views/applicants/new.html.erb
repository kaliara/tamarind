      <%= f.text_field :employer3_address_zipcode %>
    </div>
    <div class="field">
      <%= f.label :employer3_phone, "Phone" %>
      <%= f.text_field :employer3_phone %>
    </div>
    <div class="field">
      <%= f.label :employer3_start_date, "Start Date" %>
      <%= f.date_select :employer3_start_date, :start_year => 1970, :end_year => Date.today.year, :order => [:month, :day, :year] %>
    </div>
    <div class="field">
      <%= f.label :employer3_end_date, "End Date" %>
      <%= f.date_select :employer3_end_date, :start_year => 1970, :end_year => Date.today.year, :order => [:month, :day, :year] %>
    </div>
    <div class="field checkbox_field">
      <div class="alt_label">Employer Contact</div>
      <%= f.check_box :employer3_contactable %>
      <%= f.label :employer3_contactable, "You may contact this employer" %>
    </div>
    <div class="field">
      <%= f.label :employer3_no_contact_reason, "If not, provide reason" %>
      <%= f.text_field :employer3_no_contact_reason %>
    </div>
    <div class="field">
      <%= f.label :employer3_notes, "Highlights and Contributions" %>
      <%= f.text_area :employer3_notes %>
    </div>
  </div>
  
  <h2>Education and Experience</h2>
  <div class="field">
    <%= f.label :education_completed %>
    <%= f.select :education_completed, options_for_select(["","High School", "Associates Degree", "Bachelors Degree", "Graduate Degree"]) %>
  </div>
  <div class="field">
    <%= f.label :brag, "Highlights" %>
    <%= f.text_area :brag %>
  </div>
  
  <h3>Legal Information</h3>
  <div class="field checkbox_field">
    <div class="alt_label">Criminal History</div>
    <%= f.check_box :convicted_of_felony %>
    <%= f.label :convicted_of_felony, "I have been convicted of a felony" %><span class="note">(check the box if you have)</span>
  </div>
  <div class="field checkbox_field">
    <div class="alt_label">Eligibility</div>
    <%= f.check_box :legal_to_work_in_usa %>
    <%= f.label :legal_to_work_in_usa, "I am legally eligible to work in the USA" %> <span class="note">(proof of documentation required)</span>
  </div>
  
  
  <h2>Position Information</h2>
  <div class="field">
    <%= f.label :position_applying_for, "Interested In" %>
    <%= f.select :position_applying_for, options_for_select([["Front of the House","front"],["Back of the House","back"]], :selected => params[:position]), :include_blank => true %>
  </div>
  <div class="field checkbox_field">
    <div class="alt_label">Availability</div>
    <%= f.check_box :full_time %>
    <%= f.label :full_time, "Full-Time" %>&nbsp;&nbsp;&nbsp;
    <%= f.check_box :part_time %>
    <%= f.label :part_time, "Full-Time" %>
  </div>
  <div class="field">
    <%= f.label :desired_salary, "Desired Salary" %>
    <%= f.number_field :desired_salary %> <span class="note">(example "35000" for $35,000)</span>
  </div>
  <div class="field">
    <%= f.label :available_shifts, "Available Shifts" %>
    <%= f.text_field :available_shifts %> <span class="note">(example: "Fri-Sun Daytime and Tue-Thu Evenings")</span>
  </div>
  <div class="field">
    <%= f.label :available_start_date, "Available Start Date" %>
    <%= f.date_select :available_start_date, :start_year => Date.today.year, :end_year => Date.today.year + 1, :order => [:month, :day, :year] %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Inquiry", :class => "button" %>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8">
if(scrollbarPresent()){
  $('body').addClass('scrollbar_present');
}

$('#add_employers').click(function(){$('#additional_employers').show();$("#add_employers").hide();return false;})
</script>
