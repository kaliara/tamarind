      <%= f.text_field :employer2_address_street2 %>
    </div>
    <div class="field">
      <%= f.label :employer2_address_city, "City" %>
      <%= f.text_field :employer2_address_city %>
    </div>
    <div class="field">
      <%= f.label :employer2_address_state, "State" %>
      <%= f.text_field :employer2_address_state %>
    </div>
    <div class="field">
      <%= f.label :employer2_address_zipcode, "Zip Code" %>
      <%= f.text_field :employer2_address_zipcode %>
    </div>
    <div class="field">
      <%= f.label :employer2_phone, "Phone" %>
      <%= f.text_field :employer2_phone %>
    </div>
    <div class="field">
      <%= f.label :employer2_start_date, "Start Date" %>
      <%= f.date_select :employer2_start_date, :start_year => 1970, :end_year => Date.today.year, :order => [:month, :day, :year] %>
    </div>
    <div class="field">
      <%= f.label :employer2_end_date, "End Date" %>
      <%= f.date_select :employer2_end_date, :start_year => 1970, :end_year => Date.today.year, :order => [:month, :day, :year] %>
    </div>
    <div class="field checkbox_field">
      <div class="alt_label">Employer Contact</div>
      <%= f.check_box :employer2_contactable %>
      <%= f.label :employer2_contactable, "You may contact this employer" %>
    </div>
    <div class="field">
      <%= f.label :employer2_no_contact_reason, "If not, provide reason" %>
