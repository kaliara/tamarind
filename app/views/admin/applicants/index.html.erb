<h1>Listing applicants</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @applicants.each do |applicant| %>
  <tr>
    <td><%= applicant.first_name %></td>
    <td><%= applicant.last_name %></td>
    <td><%= applicant.email %></td>
    <td><%= applicant.notes %></td>
    <td><%= link_to 'Show', admin_applicant_path(applicant) %></td>
    <td><%= link_to 'Destroy', admin_applicant_path(applicant), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
