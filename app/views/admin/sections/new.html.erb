<h2>New Menu section</h2>

<%= form_for([:admin, @section]) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :menu_id %>
    <%= f.select :menu_id, Menu.all.collect{|m| [m.name, m.id]} %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :show_name %>
    <%= f.check_box :show_name %><span class="note">(uncheck to hide name on menu)</span>
  </div>
  <div class="field">
    <%= f.label :two_column %>
    <%= f.check_box :two_column %><span class="note">(menu displayed in two columns?)</span>
  </div>
  <div class="field">
    <%= f.label :hidden %>
    <%= f.check_box :hidden %>
  </div>
  <div class="actions">
    <%= f.submit "Add to Menu" %>
  </div>
<% end %>


<%= link_to 'Back', admin_sections_path %>
