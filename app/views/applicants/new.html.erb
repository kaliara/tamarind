    </div>
    <div class="field">
      <%= f.label :employer2_notes, "Highlights and Contributions" %>
      <%= f.text_area :employer2_notes %>
    </div>
    
    <h3>Third Most Recent Employer</h3>
    <div class="field">
      <%= f.label :employer3_name, "Name" %>
      <%= f.text_field :employer3_name %>
    </div>
    <div class="field">
      <%= f.label :employer3_position, "Position" %>
      <%= f.text_field :employer3_position %>
    </div>
    <div class="field">
