    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :direct_from_london %><br />
    <%= f.check_box :direct_from_london %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

