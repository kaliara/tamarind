<h1>Listing items</h1>

<table>
  <tr>
    <th>Section</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Position</th>
    <th>Direct from london</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.section.name %></td>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><%= item.position %></td>
    <td><%= item.direct_from_london %></td>
    <td><%= link_to 'Show', admin_item_path(item) %></td>
    <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
    <td><%= link_to 'Destroy', admin_item_path(item), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

