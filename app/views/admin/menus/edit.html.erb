<h2>Editing <%= @menu.name %> Menu</h3>

<%= form_for([:admin,@menu]) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field checkbox_field">
    <%= f.check_box :viewable %>
    <%= f.label :viewable %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to 'Show', admin_menu_path(@menu) %> |
<%= link_to 'Back', admin_menus_path %>
